<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    tools:context=".AddFragment">

    <!-- Titre -->
    <TextView
        android:id="@+id/textViewWeatherType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sélectionnez le type de temps :"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"/>

    <!-- Spinner pour la sélection du type de temps -->
    <Spinner
        android:id="@+id/spinnerWeatherType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWeatherType"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <!-- Bouton pour soumettre le signalement -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soumettre"
        android:layout_below="@id/spinnerWeatherType"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
